<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Daftar Mahasiswa</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Daftar Mahasiswa</h1>
    <table>
      <tr>
        <th>Foto</th>
        <th>Nama</th>
        <th>NIM</th>
        <th>Fakultas</th>
        <th>Prodi</th>
        <th>Aksi</th>
      </tr>
      <% data.forEach(m => { %>
        <tr>
          <td><img src="<%= m.foto %>" alt="foto"></td>
          <td><%= m.nama_lengkap %></td>
          <td><%= m.nim %></td>
          <td><%= m.fakultas %></td>
          <td><%= m.prodi %></td>
          <td>
            <div class="aksi-btn-group">
              <a href="/detail/<%= m.id %>" class="btn lihat">Lihat</a>
              <a href="/edit/<%= m.id %>" class="btn edit">Edit</a>
              <a href="/hapus/<%= m.id %>" class="btn hapus" onclick="return confirm('Hapus data ini?')">Hapus</a>
            </div>
          </td>
        </tr>
      <% }) %>
    </table>
    <a href="/" class="back-btn">â¬… Kembali</a>
  </div>
</body>
</html>
